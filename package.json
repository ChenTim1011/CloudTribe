{
    "name": "cloudtribe",
    "version": "1.0.0",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd client && npm run dev",
        "dev:backend": "cross-env PYTHONPATH=backend dotenv -e backend/.env uvicorn backend.main:app --host 0.0.0.0 --port 8000 --reload",
        "prod:frontend": "cd client && sudo rm -rf .next && npm run build",
        "prod:backend": "cd .. && . ~/CloudTribe/fastapi-env/bin/activate && pm2 start ~/CloudTribe/fastapi-env/bin/uvicorn --name fastapi-app --interpreter ~/CloudTribe/fastapi-env/bin/python3 -- backend.main:app --host 0.0.0.0 --port 8001 ",
        "prod": "npm run prod:frontend && npm run prod:backend"       
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^5.0.0"
    },
    "dependencies": {
        "@types/lodash.throttle": "^4.1.9",
        "lodash.throttle": "^4.1.1"
    }
}
